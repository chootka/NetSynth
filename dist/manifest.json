{
  "manifest_version": 2,
  "name": "NetSynth",
  "version": "0.1.0",
  "homepage_url": "https://github.com/chootka/net-synth",
  "description": "Captures network traffic as OSC for sonification",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*",
    "webRequest"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {},
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}